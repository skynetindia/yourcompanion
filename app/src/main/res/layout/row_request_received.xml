<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECEFF4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_friends"
            android:layout_width="@dimen/height_55"
            android:layout_height="@dimen/height_55"
            android:src="@drawable/ic_profile_male"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_10"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_10">

            <TextView
                android:id="@+id/txt_friends_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textview_contact_name"
                android:text="Name Here"/>

            <TextView
                android:id="@+id/txt_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textview_contact_number"
                android:text="+0123456789"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_accpet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_accept"
                android:padding="@dimen/padding_5"/>

            <ImageView
                android:id="@+id/img_decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_decline"
                android:padding="@dimen/padding_5"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D2D2D2"/>

</LinearLayout>