<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/height_135"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_5"
            android:orientation="horizontal"
            android:gravity="center">

            <pkg.android.skynet.yourcompanion.custom.ImpactTextView
                android:id="@+id/txt_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CALL"
                style="@style/textview_helpline_call"
                android:rotation="-90"
                android:layout_marginTop="2dp"/>

            <pkg.android.skynet.yourcompanion.custom.ImpactTextView
                android:id="@+id/txt_helpline_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="111"
                style="@style/textview_helpline_number"/>
        </LinearLayout>

        <pkg.android.skynet.yourcompanion.custom.RobotoCondensedBoldTextView
            android:id="@+id/txt_helpline_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_5"
            style="@style/textview_helpline_name"/>

    </RelativeLayout>
</RelativeLayout>